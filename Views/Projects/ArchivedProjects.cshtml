@using BugTracker.Services.Interfaces;
@model IEnumerable<BugTracker.Models.Project>
@using BugTracker.Models.Enums
@using BugTracker.Services;
@inject IBTFileService _BTFileService

@{
    ViewData["Title"] = "ArchivedProjects";
}

<h1>Archived Projects</h1>


  <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Archived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectPriority)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Project project in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.EndDate)
                </td>
                <td>
                    <img src="@_BTFileService.ConvertByteArrayToFile(project.ImageData,project.ImageType,DefaultImage.ProjectImage)" class="square-img rounded-start">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.Archived)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.Company.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.ProjectPriority.Id)
                </td>
                <td>                   
                    <a asp-action="UnArchive" asp-route-id="@project.Id">UnArchive</a>
                </td>
            </tr>
        }
    </tbody>
</table>
