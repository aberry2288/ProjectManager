@model IEnumerable<BugTracker.Models.Invite>

@{
    ViewData["Title"] = "Index";
}

<h1>Invite Company Members</h1>

<p>
    <a asp-action="Create">Create New Invite</a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive">
                <h4 class="mt-0 header-title">Past Invites</h4>
                <p class="text-muted font-14 mb-3">
                    All prior invites will be displayed here
                </p>

                <table id="responsive-datatable" class="table table-bordered table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.InviteDate)
                            </th>
                            @*    <th>
                            @Html.DisplayNameFor(model => model.JoinDate)
                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.CompanyToken)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.InviteeEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InviteeFirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InviteeLastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message)
                            </th>
                            @* <th>
                            @Html.DisplayNameFor(model => model.IsValid)
                            </th>*@
                            @*    <th>
                            @Html.DisplayNameFor(model => model.Company)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Project)
                            </th>
                            @*    <th>
                            @Html.DisplayNameFor(model => model.Invitor)
                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.Invitee)
                            </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InviteDate)
                                </td>
                                @*<td>
                            @Html.DisplayFor(modelItem => item.JoinDate)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.CompanyToken)
                            </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.InviteeEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InviteeFirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InviteeLastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Message)
                                </td>
                                @*   <td>
                            @Html.DisplayFor(modelItem => item.IsValid)
                            </td>*@
                                @*    <td>
                            @Html.DisplayFor(modelItem => item.Company.Name)
                            </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Description)
                                </td>
                                @*     <td>
                            @Html.DisplayFor(modelItem => item.Invitor.Id)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Invitee.Id)
                            </td>*@
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

