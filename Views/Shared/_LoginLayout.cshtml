<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Log In | Project Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A project management application for your company" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/img/favicon-32x32.png">

    <!-- App css -->

    <link href="~/adminto/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- icons -->
    <link href="~/adminto/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="loading authentication-bg authentication-bg-pattern">

    <div class="account-pages my-5">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="text-center">
                        <a href="https://adamberrysportfolio.netlify.app/" target="_blank">
                            <img src="~/img/Tree Styled Green.png" alt="" height="60" class="mx-auto">
                        </a>
                        <p class="text-muted mt-2 mb-4">Project Manager by Adam Berry</p>

                    </div>
                    <div class="card">
                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0">Sign In</h4>
                            </div>
                            @RenderBody()
                        </div> <!-- end card-body -->
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                                <p> <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted ms-1"><i class="fa fa-lock me-1"></i>Forgot your password?</a></p>
                                <p class="text-muted">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark ms-1"><b>Sign Up</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    </div>
                    <!-- end card -->

                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor -->
    <script src="~/adminto/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/adminto/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminto/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/adminto/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/adminto/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/adminto/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/adminto/assets/libs/feather-icons/feather.min.js"></script>

    <!-- App js -->
    <script src="~/adminto/assets/js/app.min.js"></script>
    @await RenderSectionAsync("scripts",required: false)

</body>
</html>